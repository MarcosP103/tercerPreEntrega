<h1>Gestión de Usuarios</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{this.first_name}} {{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.role}}</td>
      <td>
        <form action="/api/users/users/{{this._id}}" method="POST">
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit" onclick="return confirm('¿Seguro que deseas eliminar a este usuario?');">
            Eliminar
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
