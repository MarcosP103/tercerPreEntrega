<body>

    <h2>Iniciar Sesión</h2>
    <form action="/api/users/login" method="POST">
        <label for="email">Email:</label>
        <input type="email" name="email" required>
        <label for="password">Contraseña:</label>
        <input type="password" name="password" required>
        <button type="submit" class="btn btn-success">Ingresar</button>
    </form>
    <a href="/register"><button type="submit" class="btn btn-success">Registrarse</button></a>
    <br>
    <br>
    <a href="/api/users/requestpasswordreset"><button type="submit" class="btn btn-warning">Restablecer
            Contraseña</button></a>
    <br>
    <br>
    <a href="/api/users/github"><button type="submit" class="btn btn-success">Ingresar con Github</button></a>
